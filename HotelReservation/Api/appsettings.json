          "ConnectionStrings": {
            "HotelContextConnection": "Server=(localdb)\\mssqllocaldb;Database=HotelDB;Trusted_Connection=True;MultipleActiveResultSets=true"
          },
          "Secrets": {
            "secretKey": "6ExusscRkX92aprA"
          },
